<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:background="#06365a"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:text="First name"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:text="Last name"
        android:layout_below="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:layout_below="@+id/editText2"
        android:layout_alignStart="@+id/editText2"
        android:text="ID"
        android:layout_marginTop="10dp" />

    <TextView android:text="@string/positionMU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/position"
        android:textColor="#06365a"
        android:layout_below="@+id/editText3"
        android:layout_alignStart="@+id/editText3"
        android:layout_marginTop="10dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@+id/position"
        android:layout_alignStart="@+id/position"
        android:layout_marginBottom="1dp"></Spinner>

    <TextView android:text="@string/routeMU"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/route"
        android:textColor="#06365a"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/spinner"
        android:layout_marginBottom="160dp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_alignTop="@+id/route"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"></Spinner>

    <TextView
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text=" Sign Up"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:textColor="#ffffff"
        android:textSize="50dp" />

    <TextView android:text="@string/stationMU"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textColor="#06365a"
        android:layout_below="@+id/spinner1"
        android:layout_alignStart="@+id/spinner"
        android:layout_marginTop="15dp" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"></Spinner>
</RelativeLayout>